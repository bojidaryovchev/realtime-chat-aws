# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Auth0 (get these from your Auth0 dashboard)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.yourdomain.com

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/chatdb

# Redis (required for Socket.IO adapter in production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TLS=false
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# Socket.IO
SOCKET_IO_ADAPTER=redis
SOCKET_IO_PING_TIMEOUT=30000
SOCKET_IO_PING_INTERVAL=25000

# CORS (set to your web app URL)
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
