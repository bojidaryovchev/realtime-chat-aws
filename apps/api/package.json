{
  "name": "@realtime-chat/api",
  "version": "1.0.0",
  "description": "REST API service for realtime chat",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
