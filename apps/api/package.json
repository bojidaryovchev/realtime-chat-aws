    "@fastify/sensible": "^5.6.0",
    "@prisma/client": "^7.0.0",
    "@realtime-chat/auth": "workspace:*",
    "@realtime-chat/common": "workspace:*",
    "@realtime-chat/database": "workspace:*",
    "fastify": "^4.25.2",
    "fastify-plugin": "^5.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
