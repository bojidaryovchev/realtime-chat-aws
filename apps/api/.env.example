# Server
PORT=3002
HOST=0.0.0.0
NODE_ENV=development

# Auth0 (get these from your Auth0 dashboard)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.yourdomain.com

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/chatdb

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TLS=false

# AWS (required for production - SQS push notifications)
AWS_REGION=us-east-1
SQS_PUSH_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/push-queue

# CORS (set to your web app URL)
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
