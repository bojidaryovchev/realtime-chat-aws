{
  "name": "@realtime-chat/common",
  "version": "1.0.0",
  "description": "Shared utilities for realtime chat services",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./logger": {
      "import": "./dist/logger.js",
      "types": "./dist/logger.d.ts"
    },
    "./redis": {
      "import": "./dist/redis.js",
      "types": "./dist/redis.d.ts"
    },
    "./env": {
      "import": "./dist/env.js",
      "types": "./dist/env.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "ioredis": "^5.3.2",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "fastify": "^4.25.0"
  },
  "peerDependenciesMeta": {
    "fastify": {
      "optional": true
    }
  }
}
